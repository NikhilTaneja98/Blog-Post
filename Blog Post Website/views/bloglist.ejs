<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View All</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container mb-3">
    <a href="/" class="btn btn-info mt-3">Return To Home</a>
    <% data.forEach(entry => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4><%= entry.title %></h4>
            <div class="card-date text-muted mb-2">
                <%= entry.createdAt %>
            </div>
            <div class="description mb-2">
                <%= entry.writing.slice(0,250) %>
            </div>
            <form method="GET">
                <button type="submit" formaction="/view/<%= entry.id %>" class="btn btn-outline-warning btn-sm">View</button>
                <button type="submit" formaction="/edit/<%=entry.id%>" class="btn btn-outline-warning btn-sm">Edit</button>
                <button type="submit" formaction="/delete-post/<%=entry.id%>" class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
        </div>
        </div>
        <% }) %>
    </div>
</body>
</html>